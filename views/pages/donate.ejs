<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/donate.css">
    <title>Make a change by donating ❤️</title>
</head>
<body>
    <%- include('../partials/loader.ejs') %>
    <%- include('../partials/navbar.ejs') %>

    <section class="donate-section">
        <div class="donate-container">
            <h1>Support our batch</h1>
            <p class="description">
            Keeping this site live costs money — from domain renewals to server uptime.
            Every small contribution helps us preserve these memories and keep our batch connected.
            </p>

            <div class="amount-options">
            <button class="donate-amount">₹10</button>
            <button class="donate-amount">₹20</button>
            <button class="donate-amount">₹50</button>
            <button class="donate-amount">₹100</button>
            </div>

            <div class="custom-input">
            <label for="customAmount">Or enter a custom amount</label>
            <input type="number" id="customAmount" placeholder="₹75 or more maybe :)" min="10">
            </div>

            <button class="donate-btn" onclick="proceedToPayment()"><span class="fal fa-hand-holding-circle-dollar"></span> &nbsp; Donate Now</button>
        </div>
    </section>

<script>
  function proceedToPayment() {
    const selected = document.querySelector(".donate-amount.selected");
    const customAmount = document.getElementById("customAmount").value;
    const amount = customAmount || (selected ? selected.textContent.replace("₹", "") : null);

    if (!amount) return alert("Please select or enter an amount.");

    // You can later replace this with actual payment gateway code
    alert(`Redirecting to payment gateway for ₹${amount}`);
  }

  document.querySelectorAll(".donate-amount").forEach(btn => {
    btn.addEventListener("click", () => {
      document.querySelectorAll(".donate-amount").forEach(b => b.classList.remove("selected"));
      btn.classList.add("selected");
      document.getElementById("customAmount").value = "";
    });
  });

  document.getElementById("customAmount").addEventListener("input", () => {
    document.querySelectorAll(".donate-amount").forEach(b => b.classList.remove("selected"));
  });
</script>

</body>
</html>